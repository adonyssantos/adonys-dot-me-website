---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import {
	pathNameIsInLanguage,
	DEFAULT_LANG,
	getLocalizedPathname,
	type LanguageKey,
	LANGUAGES_KEYS,
} from "../i18n/utils";
import { BETA_FEATURES } from "../utilities/consts";

type Props = {
	title: string;
	description: string;
	image?: string;
	lang: LanguageKey;
};

const canonicalPathname = pathNameIsInLanguage(Astro.url.pathname, DEFAULT_LANG)
	? Astro.url.pathname
	: getLocalizedPathname(Astro.url.pathname, DEFAULT_LANG);
const canonicalURL = new URL(canonicalPathname, Astro.site);
const {
	title,
	lang,
	description,
	image = "/images/placeholder.jpg",
} = Astro.props;
const alternateLinks = LANGUAGES_KEYS.map((_lang: LanguageKey) => {
	return {
		href: new URL(
			getLocalizedPathname(Astro.url.pathname, _lang),
			Astro.site,
		),
		hreflang: _lang,
	};
});
---

<!-- Styles -->
<link rel="preload" href="/styles/pico.min.css" as="style" onload="this.rel='stylesheet'">
<link rel="preload" href="/styles/fira_code.css" as="style" onload="this.rel='stylesheet'">
<link rel="stylesheet" href="/styles/global.css">
<noscript>
  <link rel="stylesheet" href="/styles/pico.min.css">
  <link rel="stylesheet" href="/styles/fira_code.css">
</noscript>

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/images/favicons/favicon-1.png" />
<link
	rel="icon"
	type="image/svg+xml"
	href="/images/favicons/favicon-1--dark.png"
	media="(prefers-color-scheme: dark)"
/>

<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	href={`/${lang}/rss.xml`}
	type="application/rss+xml"
	title="RSS"
/>

<!-- Font preloads -->
 {
	BETA_FEATURES.fontsPreload && (
		<link
			rel="preload"
			href="/fonts/woff2/FiraCode-Regular.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/woff2/FiraCode-Bold.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
	)
 }

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Alternate URLs -->
{
	alternateLinks.map(({ href, hreflang }) => (
		<link rel="alternate" href={href} hreflang={hreflang} />
	))
}

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
